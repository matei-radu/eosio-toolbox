{
  "compilerOptions": {
    // Virtually all modern browsers fully support ES 2015.
    "target": "es2015",

    "module": "es2015",
    "moduleResolution": "node",

    // Needed for the below `allowSyntheticDefaultImports`.
    "esModuleInterop": true,

    // React modules have no default exports and this setting allows to import these modules
    // as default instead of using the `import * as React from 'react'` syntax.
    "allowSyntheticDefaultImports": true,

    // Transpile JSX syntax to JavaScript using the default `React.createElement` factory function.
    "jsx": "react",

    "sourceMap": true,

    "baseUrl": "./src/",

    "lib": [
      "dom",
      "es2015"
    ],

    "importHelpers": true,
    "resolveJsonModule": true,

    "strict": true
  },

  "exclude": [
    "node_modules"
  ]
}
